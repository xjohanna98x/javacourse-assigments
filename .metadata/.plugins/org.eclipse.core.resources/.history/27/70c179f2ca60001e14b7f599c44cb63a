package Main;

import java.util.Scanner;

public class Tax_Calculator {

	public static void main(String[] args) {
		try {
		
		Scanner scanner = new Scanner(System.in);
		String name = scanner.nextLine();
		System.out.println("Please Enter the programming language");
		String language = scanner.nextLine();
		returnNameAndLanguage(name,language);
		}catch(Exception e) {
			System.out.println(e);
		}	
	}
	public static String returnNameAndLanguage(String Name,String language) {
		String output = Name+"is learning"+language;
		return output;
	}

}
